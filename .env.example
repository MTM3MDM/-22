# 루시아 봇 환경변수 - 고급 자연어 AI 어시스턴트
# 완전 업그레이드된 디스코드 봇 설정

# 🔑 필수 API 키들
GEMINI_API_KEY=your_gemini_api_key_here
DISCORD_TOKEN=your_discord_bot_token_here

# 🔍 선택적 API 키들 (고급 기능용)
SERPAPI_KEY=your_serpapi_key_here_optional
OPENWEATHER_API_KEY=your_weather_api_key_optional
YOUTUBE_API_KEY=your_youtube_api_key_optional

# 🤖 봇 기본 설정
BOT_NAME=루시아
BOT_VERSION=3.0-advanced-ai
BOT_DESCRIPTION=고급 자연어 AI 어시스턴트

# 👑 최고관리자 ID (절대 변경 불가)
# SUPER_ADMIN_ID=1295232354205569075

# 📊 데이터베이스 설정
DATABASE_NAME=lucia_bot.db
DATABASE_BACKUP_INTERVAL=86400

# 📝 로깅 설정
LOG_LEVEL=INFO
LOG_FILE=lucia_bot.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# 🧠 AI 모델 설정
DEFAULT_MODEL=flash
MAX_CONVERSATION_HISTORY=40
CONTEXT_WINDOW_SIZE=32000

# 🛡️ 보안 설정
RATE_LIMIT_PER_MINUTE=15
RATE_LIMIT_PER_5MIN=50
MAX_MESSAGE_LENGTH=3000
SPAM_DETECTION_ENABLED=true

# 🎨 기능 설정
WEB_SEARCH_ENABLED=true
IMAGE_GENERATION_ENABLED=true
CHART_GENERATION_ENABLED=true
SYSTEM_MONITORING_ENABLED=true

# ⚡ 성능 설정
CLEANUP_INTERVAL=7200
PERFORMANCE_MONITORING_INTERVAL=300
MEMORY_OPTIMIZATION_ENABLED=true

# 🌐 자연어 처리 설정
NATURAL_LANGUAGE_ONLY=true
COMMAND_SYSTEM_DISABLED=true
MULTILINGUAL_SUPPORT=true